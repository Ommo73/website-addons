<odoo noupdate="1">

    <record id="payment.payment_acquirer_azul" model="payment.acquirer">
        <field name="name">Azul</field>
        <field name="image" type="base64" file="payment_azul/static/src/img/azul_icon.png"/>
        <field name="provider">azul</field>
        <field name="company_id" ref="base.main_company"/>
        <field name="view_template_id" ref="azul_acquirer_button"/>
        <field name="environment">test</field>
        <field name="payment_flow">s2s</field>
        <field name="module_id" ref="base.module_payment_azul"/>
        <field name="registration_view_template_id" ref="azul_s2s_form"/>
        <field name="description" type="html">
            <p>
                A payment gateway to accept online payments via credit cards and debit cards.
            </p>
            <ul class="list-inline">
                <li><i class="fa fa-check"/>Online Payment</li>
                <li><i class="fa fa-check"/>Payment Status Tracking</li>
                <li><i class="fa fa-check"/>Save Cards</li>
            </ul>
        </field>
        <field name="pre_msg"><![CDATA[
        <p>You will be redirected to the Azul page after clicking on the payment button.</p>]]></field>
        <field name="payment_icon_ids" eval='[(6, 0, [ref("payment.payment_icon_cc_mastercard"), ref("payment.payment_icon_cc_visa")])]'/>
        <field name="azul_test_auth1">dummy</field>
        <field name="azul_test_auth2">dummy</field>
        <field name="azul_prod_auth1">dummy</field>
        <field name="azul_prod_auth2">dummy</field>
        <field name="azul_payment_channel">dummy</field>
        <field name="azul_store">dummy</field>
        <field name="azul_input_mode">dummy</field>
    </record>

</odoo>
